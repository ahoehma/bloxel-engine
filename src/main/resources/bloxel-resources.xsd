  <xsd:element name="resources" type="resources" />

  <xsd:complexType name="resources">
  	<xsd:sequence maxOccurs="unbounded">
      <xsd:element name="texture-atlas" type="textureAtlas" minOccurs="0" maxOccurs="unbounded" />
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="textureAtlas">
  	<xsd:sequence maxOccurs="unbounded">
      <xsd:element name="texture" type="texture" minOccurs="0" maxOccurs="unbounded"/>
    </xsd:sequence>
    <xsd:attribute name="id" type="xsd:string"/>
    <xsd:attribute name="image" type="xsd:string" use="required"/>
    <xsd:attribute name="atlas-size" type="xsd:int" use="required"/>
    <xsd:attribute name="image-size" type="xsd:int" use="required"/>
  </xsd:complexType>

  <xsd:complexType name="texture">
  	<xsd:attribute name="id" type="xsd:string" use="required"/>
    <xsd:attribute name="texture-x" type="xsd:int" use="required"/>
    <xsd:attribute name="texture-y" type="xsd:int" use="required"/>
  </xsd:complexType>

</xsd:schema>